{
    "manifest_version": 2,

    "name": "Unbabel",
    "description": "Unbabel Notifications",
    "version": "1.6",

    "permissions": [ "notifications", "https://unbabel.com/api/v1/newtranslatortask/" ],

    "browser_action": {
        "default_icon": "icon_unbabel_19.png",
        "default_title": "Unbabel"
    },
    "background": {
        "persistent": true,
        "scripts":["scripts/jquery.js", "scripts/background.js"]
    },
    "icons": {
        "16": "icon_unbabel_16.png",
        "48": "icon_unbabel_48.png",
        "96": "icon_unbabel_96.png",
        "128": "icon_unbabel_128.png"
    },
    "web_accessible_resources": [ "notification.png" ]
}
